<div id="post_show_content" class="skinny_wrapper wrapper_padding">
    <header>
        <p class="date"><%= @project.created_at.strftime('%A, %B %d') %></p>
        <h1><%= @project.title %></h1>
        <hr>
    </header>

    <div id="content">
        <%= simple_format @project.description %>
    </div>
    <hr>

<div class="button_wrapper">
            <a href="<%= @project.link %>" class="project-button" target="_blank">Visit <%= @project.title %></a>
        </div>
  
  <hr>
  
  <%= link_to "Edit", edit_project_path(@project), class: "button" %>
    <%= link_to "Delete", project_path(@project), method: :delete, data: { confirm: "Are you sure?" }, class: "button" %>

    <hr>

</div>
