<div class="padded">
  <header>
    <div class="row">
      <div class="large-12 columns">
        <h1>Stuff I've Written</h1>
        <hr>
      </div>
    </div>
  </header>

  <div class="row">
    <% @posts.each do |post| %>
    <div class="large-4 medium-4 small-12 columns">
      <div class="post">
        <h2><a href="#"><%= link_to post.title, post %></a></h2>
        <p class="date"><%= post.created_at.strftime("%A, %b %d") %></p>
        <hr />
        <%= link_to "Read Article", post %>
      </div>
    </div>
    <% end %>
  </div>
  <%= will_paginate @posts %>
</div>